{
  "version": "1.1.1",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/react-bus-esm.esm.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "prepublishOnly": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "mitt": ">=2.1",
    "react": ">=17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint --fix"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-bus-esm",
  "author": "Achmad Kurnianto",
  "module": "dist/react-bus-esm.esm.js",
  "sideEffects": false,
  "size-limit": [
    {
      "path": "dist/react-bus-esm.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-bus-esm.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@skypack/package-check": "0.2.2",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/addons": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-jest": "26.6.3",
    "babel-loader": "^8.2.2",
    "husky": "^4.3.8",
    "mitt": "^2.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "keywords": [
    "react",
    "event bus",
    "mitt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/achmadk/react-bus-esm"
  },
  "dependencies": {
    "@scarf/scarf": "1.1.0"
  }
}
